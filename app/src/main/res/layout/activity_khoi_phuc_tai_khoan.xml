<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnKHOIPHUC"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_quenmk"
    tools:context=".KhoiPhucTaiKhoanActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="449dp"
        android:layout_height="53dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="3T CINEMA"
        android:textColor="@color/tim"
        android:textSize="45sp"

        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.771"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="50dp"
        android:layout_height="49dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_left" />

    <TextView
        android:id="@+id/txtMATKHAU"
        android:layout_width="346dp"
        android:layout_height="50dp"

        android:layout_marginTop="180dp"
        android:background="@drawable/bogoc_btn"
        android:gravity="center_vertical|start"
        android:padding="15dp"
        android:paddingStart="30dp"
        android:radius="26dp"
        android:text="Mật khẩu"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/txtXTMATKHAU"
        android:layout_width="346dp"
        android:layout_height="50dp"

        android:layout_marginTop="16dp"
        android:background="@drawable/bogoc_btn"
    android:padding="15dp"
        android:paddingStart="30dp"
        android:gravity="center_vertical|start"
        android:radius="26dp"
        android:text="Nhập lại mật khẩu"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMATKHAU" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Khôi phục"
        android:backgroundTint="#3446CA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtXTMATKHAU" />

</androidx.constraintlayout.widget.ConstraintLayout>