            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/uudai1">

        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
