<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:id="@+id/linear"
        android:layout_marginLeft="5dp"
        android:background="#3F4285"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="39dp"
            android:id="@+id/back"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_arrow_back_24">
        </ImageView>

        <TextView
            android:id="@+id/Payment"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Thông tin phim"
            android:textColor="@color/white"
            android:textSize="27sp">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_film"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@drawable/p3" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="20dp">

            <TableRow>

                <TextView
                    android:id="@+id/name_film"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="SPY X FAMILY"
                    android:textSize="30sp"
                    android:textStyle="bold">


                </TextView>
            </TableRow>

            <TableRow
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="Thể loại:hài loại, gia đình "
                    android:textSize="20sp">

                </TextView>
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/number_12" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Phim dành cho người đủ 12 tuổi trở lên"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">

                <!-- First item -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/custom_comment"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/like_favorite_heart_5759" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Yêu thích" />
                </LinearLayout>

                <!-- Second item -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/custom_comment"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/trailer" />

                    <TextView
                        android:id="@+id/trailer"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content"
                        android:text="Trailer" />
                </LinearLayout>

            </TableRow>



        </TableLayout>

    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_marginTop="310dp"
        android:layout_height="wrap_content">
        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"

                android:text="Ngày khởi chiếu ">

            </TextView>
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Thời lượng"
                android:gravity="center"
                android:layout_height="wrap_content">

            </TextView>
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Ngôn ngữ"
                android:gravity="center"
                android:layout_height="wrap_content">

            </TextView>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="10-2-2024"
                android:gravity="center"
                android:layout_height="wrap_content">

            </TextView>
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="110 phút"
                android:gravity="center"
                android:layout_height="wrap_content">

            </TextView>
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Tiếng nhật"
                android:gravity="center"
                android:layout_height="wrap_content">

            </TextView>
        </TableRow>

    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nội dung phim"
            android:textStyle="bold"
            android:textSize="25sp"
            >

        </TextView>

        <TextView
            android:id="@+id/Content_film"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spy x Family xoay quanh gia đình Forger, một gia đình đặc biệt với những bí mật riêng. Loid Forger, còn được biết đến là Twilight là một điệp viên xuất sắc.">

        </TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="480dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bình luận"
            android:textSize="25sp"
            android:textStyle="bold">

        </TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/nearbyBINHLUANRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="8dp" />
        <TextView
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chưa có bình luận"
            android:textSize="18sp"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/black"
            android:padding="16dp" />


    </LinearLayout>

</RelativeLayout>