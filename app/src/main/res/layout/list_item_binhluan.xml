<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="wrap_content">

    <!-- Hình ảnh nằm bên trái -->
    <ImageView
        android:layout_width="76dp"
        android:layout_height="85dp"
        android:src="@drawable/taikhoan"
        android:layout_marginRight="16dp" />

    <!-- Nội dung nằm bên phải -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lê Thị Huyền Trang"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_binhluan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phim xây dựng hình ảnh đẹp, nhưng nội dung chưa lôi cuốn, các tình huống dễ đoán. Toàn cảnh máu me"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="4dp" />

        <!-- Xếp hạng -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/rating_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/star" />

            <TextView
                android:id="@+id/rating_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="4.2/10 - Tạm"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
