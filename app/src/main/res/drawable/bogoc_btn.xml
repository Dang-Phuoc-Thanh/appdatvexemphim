<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Đặt bán kính bo góc -->
    <corners android:radius="26dp"/>

    <!-- Màu nền -->
    <solid android:color="#7B3DD5"/> <!-- Ví dụ màu tím -->

    <!-- Đặt viền (stroke) -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF"/> <!-- Viền màu trắng -->

    <!-- Đặt khoảng cách đệm bên trong -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>

</shape>
