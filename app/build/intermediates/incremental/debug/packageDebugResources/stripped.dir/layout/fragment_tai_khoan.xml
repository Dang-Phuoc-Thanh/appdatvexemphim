<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_app_moi"
    tools:context=".TaiKhoan">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:background="#3F4285"
        android:layout_height="wrap_content">

        <ImageView

            android:layout_width="39dp"
            android:layout_height="match_parent"
            android:id="@+id/buttonback"
            android:src="@drawable/baseline_arrow_back_24">

        </ImageView>

        <TextView
            android:id="@+id/Payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tài khoản của tôi"
            android:textColor="@color/white"
            android:textSize="27sp">

        </TextView>
    </LinearLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- Profile Image -->
        <TableRow
            android:gravity="center">
            <ImageView
                android:src="@drawable/profile"
                android:layout_width="150dp"
                android:layout_height="150dp" />
        </TableRow>

        <!-- Họ và tên -->
        <TableRow
            android:paddingTop="20dp">
            <TextView
                android:text="Họ và tên:"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="Đặng Phước Thạnh"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </TableRow>

        <!-- Giới tính -->
        <TableRow
            android:paddingTop="8dp">
            <TextView
                android:text="Giới tính:"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="Nam" />
        </TableRow>

        <!-- Email -->
        <TableRow
            android:paddingTop="8dp">
            <TextView
                android:text="Email:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:text="thanh@gmail.com"
                android:layout_width="wrap_content"
                android:textColor="@color/white"

                android:textSize="20sp"
                android:layout_weight="1" />
        </TableRow>

        <!-- Số điện thoại -->
        <TableRow
            android:paddingTop="8dp">
            <TextView
                android:text="Số điện thoại:"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:text="0123456789"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_weight="1" />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="390dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <TableRow
            android:layout_marginTop="10dp"
            android:background="@color/blue">

            <ImageView
                android:src="@drawable/coin"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <TextView
                android:text="Xu tích lũy"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:textSize="25sp"
                android:layout_weight="1"/>

            <ImageView
                android:src="@drawable/next"
                android:id="@+id/xu"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

        </TableRow>

        <TableRow
            android:layout_marginTop="10dp"
            android:background="@color/blue">

            <ImageView
                android:src="@drawable/introduction"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <TextView
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="Giới thiệu bạn bè"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:src="@drawable/next"
                android:layout_width="30dp"
                android:alpha="0.4"
                android:id="@+id/gioithieu"
                android:layout_height="30dp"/>

        </TableRow>

        <TableRow
            android:layout_marginTop="10dp"
            android:background="@color/blue">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/file" />

            <TextView
                android:text="Lịch sử giao dịch"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:layout_weight="1"/>

            <ImageView
                android:src="@drawable/next"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

        </TableRow>

        <TableRow
            android:layout_marginTop="10dp"
            android:background="@color/blue">

            <ImageView
                android:src="@drawable/encrypted"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <TextView
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="Bảo mật tài khoản"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <ImageView
                android:src="@drawable/next"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

        </TableRow>
        <TableRow
            android:layout_marginTop="10dp"
            android:background="@color/blue">

            <ImageView
                android:src="@drawable/salary"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <TextView
                android:layout_marginStart="10dp"
                android:text="Nguồn tiền"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <ImageView
                android:src="@drawable/next"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

        </TableRow>


        <TableRow
            android:layout_marginTop="10dp"
            android:background="@color/blue">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/logout" />

            <TextView
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="Đăng xuất"
                android:id="@+id/logout"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:src="@drawable/next"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

        </TableRow>

    </TableLayout>





</RelativeLayout>