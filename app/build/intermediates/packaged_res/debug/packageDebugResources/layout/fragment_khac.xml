<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_app_moi"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:id="@+id/linear"
        android:layout_marginLeft="5dp"
        android:background="#3F4285"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="39dp"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_reorder_24">
        </ImageView>

        <TextView
            android:id="@+id/Payment"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            android:text="Khác"
            android:textColor="@color/white"
            android:textSize="27sp">

        </TextView>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_location_on_24">
        </ImageView>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_marginTop="350dp"

        android:layout_height="wrap_content">
        <TableRow>

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/person"
                app:shapeAppearanceOverlay="@style/circle">

            </com.google.android.material.imageview.ShapeableImageView>

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:background="@drawable/call"
                app:shapeAppearanceOverlay="@style/circle">

            </com.google.android.material.imageview.ShapeableImageView>


        </TableRow>
        <TableRow
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp">
            <TextView
                android:text="Tài khoản"
                android:id="@+id/taikhoan"
                android:textSize="35sp"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:gravity="center"
                >


            </TextView>
            <TextView
                android:text="Hỗ trợ"
                android:textSize="35sp"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/hotro"
                >


            </TextView>
        </TableRow>

        <TableRow>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/bapnuoc"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                app:shapeAppearanceOverlay="@style/circle"
                app:srcCompat="@drawable/noto_popcorn">

            </com.google.android.material.imageview.ShapeableImageView>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/vecuatoi"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:background="@drawable/ls_mua_ve"
                app:shapeAppearanceOverlay="@style/circle">

            </com.google.android.material.imageview.ShapeableImageView>



        </TableRow>
        <TableRow
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp">
            <TextView
                android:text="Bỏng ngô"
                android:textSize="35sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_weight="1"

                >


            </TextView>
            <TextView
                android:text="Vé"
                android:textSize="35sp"
                android:textColor="@color/white"
                android:gravity="center"

                android:layout_weight="1"

                >


            </TextView>
        </TableRow>

    </TableLayout>



</RelativeLayout>